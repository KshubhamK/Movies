<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottom_navigation_stroke" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_latest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_latest_movie"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/local_movies"/>

                <TextView
                    android:id="@+id/tv_latest_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/latest_movies"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_popular"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_popular_movie"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/popular_movie"/>

                <TextView
                    android:id="@+id/tv_popular_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_strick_stroke"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/popular_movies"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_movie_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_movie_details"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/movie_filter"/>

                <TextView
                    android:id="@+id/tv_movie_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_strick_stroke"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/movie_details"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>